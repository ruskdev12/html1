JAVA:

const caixa = document.querySelectorAll('.texto');

caixa.forEach(texto => {
    caixa.addEventListener('.texto' , () => {
        box.style.backgroundColor = '#ffff';
        box.style.transform = 'scale(1,05)';
        box.style.transition = 'background-color 0.3, transform 0.3s';
        
    })
    box.addEventListener('mouseSai', () => {
        box.style.backgroundColor = '#ffff';
        box.style.transform = 'scale(1)';


    })

})

